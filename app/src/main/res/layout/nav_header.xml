<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_header_layout"
    android:layout_width="match_parent"
    android:layout_height="132dp"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:paddingTop="32dp"
    android:paddingBottom="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:gravity="center_vertical">

<RelativeLayout
    android:id="@+id/header_content_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 戻るボタン (左向き矢印「＜」) -->
    <ImageButton
        android:id="@+id/header_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@drawable/ic_arrow_back_white"
        app:tint="@android:color/white"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/close_drawer_description"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <!-- アプリのアイコン (ロゴなど) -->
    <ImageView
        android:id="@+id/header_app_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
        android:layout_toEndOf="@id/header_close_button"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"/>

    <!-- アプリのタイトル -->
    <TextView
        android:id="@+id/header_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_app_name"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/header_app_icon"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginStart="12dp"/>
    <!-- 言語選択 -->
    <Spinner
        android:id="@+id/header_spinner_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"/>
    </RelativeLayout>
</LinearLayout>
